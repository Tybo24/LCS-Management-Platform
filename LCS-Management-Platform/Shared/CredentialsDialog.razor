@using System.ComponentModel.DataAnnotations
@using Services.Interfaces
@inject ISnackbar Snackbar
@inject IAuthService authService

<MudDialog>
    <TitleContent>
        @MudDialog.Title
    </TitleContent>
    <DialogContent>
        <MudItem xs="24" sm="14">
            <MudTextField T="string" Label="Username"
                          Required="true"
                          RequiredError="User name is required!"
                          OnlyValidateIfDirty="true"
                          Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})"
                          @ref="username" />
        </MudItem>
        <MudItem xs="24" sm="14">
            <MudTextField T="string" Label="Password"
                          Required="true"
                          InputType="InputType.Password"
                          RequiredError="Password is required!"
                          OnlyValidateIfDirty="true"
                          @ref="password" />
        </MudItem>
    </DialogContent>
    <DialogActions>
        <MudButton Disabled=@_processing OnClick="Cancel">Cancel</MudButton>
        <MudButton Disabled=@_processing Color ="Color.Primary" OnClick="Authenticate">Submit</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public MudTextField<string> username { get; set; }

    [Parameter]
    public MudTextField<string> password { get; set; }

    private bool _processing;

    private void Cancel() => MudDialog.Cancel();

    private async void Authenticate()
    {
        _processing = true;

        if (!string.IsNullOrEmpty(username.Value) && !string.IsNullOrEmpty(password.Value))
        {
            if (await authService.GetAuthTokenAsync(username.Value, password.Value))
            {
                Snackbar.Add("Authentication successful", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add("Authentication failed, try again.", Severity.Error);
                MudDialog.Close(DialogResult.Ok(false));
            }
        }

        _processing = false;
    }
}